# SparkiFire Web Environment Variables
# Copy this file to .env and add your real API keys

# Primary AI Service (REQUIRED)
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# Music Generation Service (REQUIRED for music features)
VITE_REPLICATE_API_KEY=your-replicate-api-key-here

# Optional AI Services (for future use)
VITE_CLAUDE_API_KEY=
VITE_OPENAI_API_KEY=

# Google OAuth (for future use)
VITE_GOOGLE_CLIENT_ID=

# Stripe configuration
# Set VITE_STRIPE_MODE to "test" to run Stripe in test mode (no real charges)
VITE_STRIPE_MODE=live
VITE_STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_key_here
VITE_STRIPE_LIVE_PRICE_ID=price_live_id_here
VITE_STRIPE_LIVE_PAYMENT_LINK=https://buy.stripe.com/your-live-link
VITE_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_key_here
VITE_STRIPE_TEST_PRICE_ID=price_test_id_here
VITE_STRIPE_TEST_PAYMENT_LINK=https://buy.stripe.com/test_your_link
VITE_STRIPE_BASE_PRICE_USD=5
VITE_STRIPE_INTRO_PERCENT_OFF=0

# Server-side Stripe env (add these inside Vercel)
# STRIPE_INTRO_PERCENT_OFF=0    # Set to >0 (e.g. 80) when running a promo
# STRIPE_INTRO_COUPON_ID=sparki_intro_one_dollar
